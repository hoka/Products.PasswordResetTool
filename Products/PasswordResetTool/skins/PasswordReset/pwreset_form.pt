<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<div metal:fill-slot="main">

    <h1 i18n:translate="heading_reset_password">Password reset confirmation</h1>

    <div i18n:translate="description_reset_password">
        <p>
 	   This form will allow you to reset your password. Just fill out the
           form below.
        </p>
    </div>

    <form class="group"
          name="pwreset_action" 
          action="pwreset_action"
          method="post">

        <input type="hidden" name="randomstring" value=""
               tal:attributes="value options/randomstring | request/randomstring | nothing" />
	
        <span class="legend" i18n:translate="legend_new_password">New Password</span>
	
        <div class="row"
             tal:condition="here/portal_password_reset/checkUser | nothing">
            <div class="label" i18n:translate="label_my_user_name_is">
            My user name is
            </div>
            <div class="field">
                <input name="userid"
                       tabindex="" 
                       value=""
                       tal:attributes="value request/userid|nothing;
                                       tabindex tabindex/next;" 
                       />
            </div>
        </div>

        <div class="row">
            <div class="label" i18n:translate="label_new_password">
            New password
            </div>
            <div class="field">
                <input name="password"
                       type="password"
                       tabindex="" 
                       value=""
                       tal:attributes="tabindex tabindex/next;" 
                       />
            </div>
        </div>

        <div class="row">
            <div class="label" i18n:translate="label_confirm_new_password">
            Confirm new password
            </div>
            <div class="field">
                <input name="password2"
                       type="password"
                       tabindex="" 
                       value=""
                       tal:attributes="tabindex tabindex/next;" 
                       />
            </div>
        </div>

        <div class="row">
            <div class="label">&nbsp;</div>
            
            <div class="field">
                <input class="context"
                       tabindex="" 
                       type="submit" 
                       value="Reset my password"
                       i18n:attributes="value"
                       tal:attributes="tabindex tabindex/next;"
                       />
            </div>
        </div>	
    
    </form>


</div>

</body>
</html>
